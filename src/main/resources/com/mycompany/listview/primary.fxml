<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.listview.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <ListView fx:id="listViewShows" onMouseClicked="#handleListViewItemsMouseClick" prefHeight="200.0" prefWidth="200.0" />
      <Label text="New Show Name:" />
      <TextField fx:id="textField" />
      <Button fx:id="AddShowButton" mnemonicParsing="false" onAction="#addShow" text="Add Show" />
      <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearList" text="Clear" />
      <Button fx:id="readFromFile" mnemonicParsing="false" onAction="#readFromFile" text="Read From File" />
   </children>
</VBox>
